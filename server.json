{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.sunshad0w/html2md",
  "title": "HTML to Markdown MCP Server",
  "description": "Converts HTML to clean Markdown. Supports Playwright for JavaScript-heavy pages.",
  "version": "0.2.0",
  "license": "MIT",
  "author": {
    "name": "sunshad0w",
    "url": "https://github.com/sunshad0w"
  },
  "homepage": "https://github.com/sunshad0w/html2md-mcp",
  "repository": {
    "url": "https://github.com/sunshad0w/html2md-mcp",
    "source": "github"
  },
  "keywords": [
    "html",
    "markdown",
    "converter",
    "web-scraping",
    "playwright",
    "mcp",
    "claude"
  ],
  "packages": [
    {
      "registryType": "docker",
      "registryBaseUrl": "https://docker.io",
      "identifier": "sunshad0w/html2md-mcp",
      "transport": {
        "type": "stdio"
      }
    }
  ],
  "tools": [
    {
      "name": "html_to_markdown",
      "description": "Converts HTML from a URL to clean Markdown format",
      "parameters": {
        "url": "URL of the webpage to convert",
        "include_images": "Include images in Markdown (default: true)",
        "include_tables": "Include tables in Markdown (default: true)",
        "include_links": "Include links in Markdown (default: true)",
        "fetch_method": "Fetch method: 'fetch' (fast) or 'playwright' (JavaScript support)",
        "browser_type": "Browser type for Playwright: 'chromium', 'firefox', 'webkit'",
        "timeout": "Request timeout in seconds (5-120, default: 30)",
        "max_size": "Maximum content size in bytes (1MB-50MB, default: 10MB)",
        "use_cache": "Enable caching for faster repeated conversions (default: false)",
        "cache_ttl": "Cache time-to-live in seconds (60-86400, default: 3600)"
      }
    }
  ]
}
